					]
				each item in list
					.swiper-slide.top-slider__item
						.top-slider__img(style="background-image: url(assets/img/"+item.img+")")
						.container-fluid
							.row
								.col-lg-8.offset-lg-4.col-xl-6.offset-xl-6
									.top-slider__content
										.h1= item.title

										if(item.text)
											.top-slider__text= item.text

										a(href="#").btn-circle Перейти

		.swiper-pagination.js-top-slider-pagination
		
