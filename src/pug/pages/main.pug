	section.top-slider-wrap
		.top-slider.js-top-slider.swiper.mb-indent
			.swiper-wrapper
				-
					var list=[
						{img:'top-slide1.jpg', title:'Дистрибьютор профессиональной косметики', text:'Для салонов красоты и магазинов косметики'},
						{img:'top-slide2.jpg', title:'Дистрибьютор', text:'Для салонов красоты'},
